@model ledcity.Models.Order
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="row">

        <h1 class="text-center"><a href="#myModal" role="button" class="btn btn-success btn-lg pull-left" style="margin-left:100px;height:50px;width:200px" data-toggle="modal">Sign In Now</a></h1>
    </div>
</div>
<h3 style="margin-left:40px"> Sign In to place an Order Online Now.</h3>

<div id="myModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h3 id="myModalLabel">Sign In to place your Order.</h3>
            </div>
            <div class="modal-body">
                @*<form class="form-horizontal col-sm-12" method="post" action="myCustomer">*@
                @using (Html.BeginForm("myLogin", "contact", FormMethod.Post)) { 
                    @Html.Label("Email") @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Email" })
                    @Html.Label("Password") @Html.PasswordFor(model => model.Phone, new { @class = "form-control", placeholder = "Password" })

                    <br />
                    <div class="form-group"><button type="submit" name="sendbtn" class="btn btn-success pull-right">Send</button> <p class="help-block pull-left text-danger hide" id="form-error">&nbsp; The form is not valid. </p></div>
                }

                @*@ <div class="form-group"><label>Name</label><input name="nam" class="form-control required" placeholder="Your name" data-placement="top" data-trigger="manual" data-content="Must be at least 3 characters long, and must only contain letters." type="text"></div>
                    <div class="form-group"><label>Model</label><input name="mod" class="form-control" placeholder="Model.." data-placement="top" data-trigger="manual"></div>
                    <div class="form-group"><label>E-Mail</label><input name="em" class="form-control email" placeholder="email@you.com (so that we can contact you)" data-placement="top" data-trigger="manual" data-content="Must be a valid e-mail address (user@gmail.com)" type="text"></div>
                    <div class="form-group"><label>Phone</label><input name="phn" class="form-control phone" placeholder="999-999-9999" data-placement="top" data-trigger="manual" data-content="Must be a valid phone number (999-999-9999)" type="text"></div>
                    <div class="form-group"><button type="submit" name="sendbtn" class="btn btn-success pull-right">Send It!</button> <p class="help-block pull-left text-danger hide" id="form-error">&nbsp; The form is not valid. </p></div>*@
                @* </form>*@
            </div>
            <div class="modal-footer">
                <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
            </div>
        </div>
    </div>
</div>