<div id="myModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h3 id="myModalLabel">Add Led to Show</h3>
            </div>
            <div class="modal-body">
                
                @using (Html.BeginForm("myAdmin", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.Label("Brand Name") @Html.TextBoxFor(model => model.Bname, new { @class = "form-control required ", placeholder = "Brand" })
                    @Html.Label("Model No") @Html.TextBoxFor(model => model.ModelNo, new { @class = "form-control", placeholder = "Model No" })

                    @Html.Label("Price") @Html.TextBoxFor(model => model.Price, new { @class = "form-control", placeholder = "Price" })
                    <label>Upload Image</label>
                    <br />
                    <input type="file" name="Image" />
                    <br />
                    <div class="form-group"><input type="submit" name="sendbtn" class="btn btn-success pull-right" value="Send" /></div>

                }
                @{Html.EndForm();}


